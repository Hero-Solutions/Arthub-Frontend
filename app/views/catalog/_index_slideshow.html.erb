<div class="item<%= ' active' if document_counter == 0 %>">
    <div class="frame">
        <% if document.fetch(:publish_image) %>
            <%= image_tag iiif_thumbnail_url_field(document, "full"), alt: render_image_alt(document) %>
        <% else %>
            <%= image_tag iiif_thumbnail_url_field(document, "639,"), alt: render_image_alt(document) %>
        <% end %>
        <div class="caption">
            <%= index_presenter(document).label(document_show_link_field(document)) %>
        </div>
        <span class="counter">
            <%= t :'blacklight_gallery.catalog.modal_slideshow.counter', counter: document_counter + 1, count: count %>
        </span>
    </div>
</div>