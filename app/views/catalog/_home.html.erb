<% if I18n.locale == :en %>
	<%= render :partial=>'home_text_en' %>
<% else %>
	<%= render :partial=>'home_text_nl' %>
<% end %>


<script>
  $(function() {
    $('#about a').on('click', function(e) {
      e.preventDefault();

      if ($('#about-content').html() == "") {
        $('#about-content').load($(this).attr("href"), function() {
          $('#about-content').show();
        });
      } else {
        $('#about-content').toggle();
      }
    });
  });
</script>
