<!DOCTYPE html>
<html lang="<%= I18n.locale %>" class="no-js">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">

    <!-- Mobile viewport optimization h5bp.com/ad -->
    <meta name="HandheldFriendly" content="True">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    
    <!-- Internet Explorer use the highest version available -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Mobile IE allows us to activate ClearType technology for smoothing fonts for easy reading -->
    <!--[if IEMobile]>
      <meta http-equiv="cleartype" content="on">
    <![endif]-->

    <title><%= render_page_title %></title>
    <meta name="description" content="<%= meta_description %>">
    <%= opensearch_description_tag application_name, opensearch_catalog_url(:format => 'xml') %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
    <%= favicon_link_tag %>
    <link rel="canonical" href="<%= render_canonical_url %>">
    <link rel="alternate" hreflang='nl' href="<%= render_nl_url %>">
    <link rel='alternate' hreflang='en' href="<%= render_en_url %>">
    <%= content_for(:head) %>
    <meta property="og:site_name" content="<%= application_name %>">
    <meta property="og:url" content="<%= render_canonical_url %>">
    <meta property="og:title" content="<%= render_page_title %>">
    <meta property="og:description" content="<%= meta_description %>">
    <meta property="og:type" content="website">
    <meta property="og:locale" content="<%= render_language_territory %>">
    <meta property="og:locale:alternate" content="<%= render_alternate_language_territory %>">
    <meta property="og:image" content="<%= meta_image %>">
    <meta property="og:image:alt" content="<%= meta_image_alt %>">
    <meta property="og:image:type" content="image/jpeg">
    <meta name="twitter:title" content="<%= render_page_title %>">
    <meta name="twitter:description" content="<%= meta_description %>">
    <meta name="twitter:card" content="<%= twitter_card %>">
    <meta name="twitter:image" content="<%= meta_image %>">
    <meta name="twitter:image:alt" content="<%= meta_image_alt %>">
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>

    <% if Rails.env.production? %>
        <script type="text/javascript">
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-21672363-7', 'auto');
      </script>
    <% end %>
  
  </head>
  <body class="<%= render_body_class %>">

  <%= render :partial => 'shared/header_navbar' %>

  <%= render partial: 'shared/ajax_modal' %>

  <div id="main-container" class="<%= container_classes %>">
    <%= content_tag :h1, application_name, class: 'sr-only application-heading' %>

    <%= render :partial=>'/flash_msg', layout: 'shared/flash_messages' %>

    <div class="row">
      <%= yield %>
    </div>
  </div>

  <%= render :partial => 'shared/footer' %>

  <script>
    $("a:contains('http')").css("word-break","break-all");
    $("dd:contains('http')").css("word-break","break-all");
  </script>

  </body>
</html>
